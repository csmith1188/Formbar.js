            <div id="pollStarter">Poll Starter</div>
            <div id="previousPolls">Previous Polls</div>
        </div>

        <div id="centerContent" class="innerContent">
            Center Content
            <div id="pollContainer">
                Poll Container
                <div id="poll">
                    Poll Wheel
                    <%- include('../partials/virtual_bar.ejs') %>
