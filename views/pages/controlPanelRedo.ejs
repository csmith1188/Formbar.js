                <div id="answerOptions">Answer Options</div>
            </div>
            <div id="settings">Settings</div>
        </div>

        <div id="rightSidebar" class="innerContent side">
            Right Sidebar
            <div id="filters">Filters</div>
            <div id="studentList">Student List</div>
        </div>
    </div>
